{% style %}
.page-content h2 {
    font-family: Space Grotesk,sans-serif;
    font-style: normal;
    font-weight: 600;
    color: #1e212a;
    font-size: 3.6rem;
    letter-spacing: -.08rem;
    line-height: 4.3rem;
    padding: 0px 0px 1.6rem;
}
.page-content h3 {
    font-family: Space Grotesk,sans-serif;
    font-style: normal;
    font-weight: 600;
    color: #1e212a;
    font-size: 2.8rem;
    letter-spacing: -.08rem;
    line-height: 4.3rem;
    padding: 0px 0px 1.6rem;
    margin: 0;
}

.page-content {
    margin: 100px  auto;
}
.page-content p,.page-content li{
    font-family: Inter;
    font-style: normal;
    font-weight: 400;
    font-size: 1.6rem;
    letter-spacing: -.01rem;
    line-height: 2.8rem;
    color: #41454c;
    padding: 0;
    margin: 0;
}
{% endstyle %}  
